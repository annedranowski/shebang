---
const { title = "Anne’s DS/QR Notes", description = "Daily bites in data science & quantitative research" } = Astro.props;
---
<!doctype html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
  <script is:inline>
    (function() {
      const saved = localStorage.getItem('theme');
      const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
      const theme = saved || (prefersLight ? 'light' : 'dark');
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
</head>
<body>
  <header class="container header">
    <div class="brand"><a href="/about">Anne Dranowski</a>'s Shebang</div>
    <nav class="nav">
      <a href="/posts">Blog</a>
      <a href="/projects">Projects</a>
    </nav>
    <button id="theme-toggle" class="theme-toggle" aria-pressed="false" aria-label="Toggle dark mode">
      <div class="sun" aria-hidden="true">☀️</div>
      <div class="moon" aria-hidden="true">🐈‍⬛</div>
    </button>
  </header>
  <main class="container">
    <div class="content">
      <slot />
    </div>
  </main>
  <footer class="container small footer">
    <div>© {new Date().getFullYear()} Anne Dranowski</div>
  </footer>
  <script is:inline>
    const btn = document.getElementById('theme-toggle');
    function apply(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
      btn.setAttribute('aria-pressed', theme === 'dark');
    }
    btn?.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-theme') || 'dark';
      apply(current === 'dark' ? 'light' : 'dark');
    });
  </script>
</body>
</html>
